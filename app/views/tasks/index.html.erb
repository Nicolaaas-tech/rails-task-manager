<h1>My Tasks</h1>

<% @tasks.each do |task| %>
    <% if task.completed %>
      <input type="checkbox" checked disabled> <p><%= task.title %></p>
    <% else %>
      <input type="checkbox" unchecked disabled> <p><%= task.title %></p>
    <% end %>

    <%= link_to task.title, task_path(task) %>
<% end %>

 <h4> <%= link_to "Add a new task", new_task_path %> </h4>
